<div class="col-xs-12 mypage">
	<h4><i class="fas fa-user-circle"></i>&nbsp;&nbsp;マイページ</h4>

		<table class="table">
			<tr>
				<th>ニックネーム</th>
				<td><%= @user.name %></td>
			</tr>
			<tr>
				<th>メールアドレス</th>
				<td><%= @user.email %></td>
			</tr>
		</table>
		<div class="col-xs-12 edit-quit-button">
			<%= link_to edit_user_registration_path do %>
				<button class="btn btn-default col-xs-6", style="display: inline-block;"><i class="fas fa-pencil-alt"></i>&nbsp;&nbsp;登録内容の変更</button>
			<% end %>
			<%= link_to users_quit_path do %>
    	      <button class="btn btn-default col-xs-offset-1 col-xs-4"><i class="fas fa-door-open"></i>&nbsp;&nbsp;退会する</button>
        	<% end %>
    	</div>
</div>

<hr>

<div class="col-xs-12">
    <div class="user-calendar">
    	<h4><i class="far fa-calendar-alt"></i>&nbsp;&nbsp;カレンダー</h4>
    	<p class="calendar-text">
    		食材の消費期限がカレンダー内に表示されています。<br>
    		<i class="fas fa-apple-alt", style="color:#ed6d46;"></i>&nbsp;をクリックすると食材の詳細が確認できます。</p>
    		<%= month_calendar(attribute: :expiry_date, events: @foods) do |date, foods| %>
				<%= date.day %>
					<% foods.each do |food| %>
						<div>
							<%= link_to food_path(food) do %>
							<i class="fas fa-apple-alt", style="color:#ed6d46;"></i><% end %>
						</div>
					<% end %>
			<% end %>
	</div>
</div>

<hr class="mypage", style="margin: 20px 0;">

<div class="col-xs-12">
	<h4 class="food-link"><i class="fas fa-apple-alt"></i>&nbsp;&nbsp;食材について</h4>
	<%= render 'home/link_btn.html.erb' %>
</div>
