<div class="col-xs-12">
	<h4>会員一覧</h4>
		<table class="table">
			<thead>
				<tr>
					<th>会員ID</th>
					<th>ニックネーム</th>
					<th>メールアドレス</th>
					<th>ステータス</th>
				</tr>
			</thead>
			
			<tbody>
				<% @users.each do |user| %>
					<tr>
						<td><%= user.id %></td>
						<td><%= user.name %></td>
						<td><%= user.email %></td>
						<td><% if user.status = true %>
							有効
							<% else %>
							退会済
							<% end %>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>
	<div style="text-align: center;">
		<%= paginate @users %>
	</div>
</div>